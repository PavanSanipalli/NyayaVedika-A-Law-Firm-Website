---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Nyaya Vedika - Professional Law Firm" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Smith & Associates Law Firm</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Source+Sans+3:wght@400;600&display=swap" rel="stylesheet">
	</head>
	<body class="font-sans">
		<header class="bg-gradient-to-r from-slate-900 to-slate-800 text-white shadow-lg">
			<nav class="container mx-auto px-4 py-6">
				<div class="flex justify-between items-center">
					<a href="/" class="text-2xl font-serif font-bold tracking-tight hover:text-gold transition-colors">Nyaya Vedika</a>
					<div class="space-x-8">
						<a href="/" class="hover:text-gold transition-colors">Home</a>
						<a href="/practice-areas" class="hover:text-gold transition-colors">Practice Areas</a>
						<a href="/attorneys" class="hover:text-gold transition-colors">Our Attorneys</a>
						<a href="/contact" class="hover:text-gold transition-colors">Contact</a>
					</div>
				</div>
			</nav>
		</header>
		<slot />
		<footer class="bg-gradient-to-r from-slate-900 to-slate-800 text-white mt-12">
			<div class="container mx-auto px-4 py-12">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-12">
					<div>
						<h3 class="text-xl font-serif font-bold mb-6">Nyaya Vedika</h3>
						<p class="text-gray-300">XXX XXXXXX XXXXXXXXX</p>
						<p class="text-gray-300">XXXXX, XXXXXXXXXX</p>
						<p class="text-gray-300">Phone: 1234567890</p>
					</div>
					<div>
						<h3 class="text-xl font-serif font-bold mb-6">Practice Areas</h3>
						<ul class="space-y-3">
							<li><a href="/practice-areas#corporate" class="text-gray-300 hover:text-gold transition-colors">Corporate Law</a></li>
							<li><a href="/practice-areas#litigation" class="text-gray-300 hover:text-gold transition-colors">Civil Litigation</a></li>
							<li><a href="/practice-areas#real-estate" class="text-gray-300 hover:text-gold transition-colors">Real Estate</a></li>
							<li><a href="/practice-areas#family" class="text-gray-300 hover:text-gold transition-colors">Family Law</a></li>
						</ul>
					</div>
					<div>
						<h3 class="text-xl font-serif font-bold mb-6">Connect With Us</h3>
						<p class="text-gray-300 mb-6">Subscribe to our newsletter for legal updates and news.</p>
						<div class="flex space-x-6">
							<a href="#" class="text-gray-300 hover:text-gold transition-colors">LinkedIn</a>
							<a href="#" class="text-gray-300 hover:text-gold transition-colors">Twitter</a>
						</div>
					</div>
				</div>
				<div class="border-t border-gray-700 mt-12 pt-8 text-center text-gray-300">
					<p>&copy; 2030 Nyaya Vedika. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--gold: #C5A572;
		--gold-light: #D4BC94;
		--gold-dark: #B69055;
	}
	
	html {
		font-family: 'Source Sans 3', sans-serif;
		background: #fff;
		scroll-behavior: smooth;
	}

	.font-serif {
		font-family: 'Playfair Display', serif;
	}

	.text-gold {
		color: var(--gold);
	}

	.hover\:text-gold:hover {
		color: var(--gold);
	}

	.bg-gold {
		background-color: var(--gold);
	}

	.hover\:bg-gold:hover {
		background-color: var(--gold);
	}

	.border-gold {
		border-color: var(--gold);
	}

	/* Smooth transitions */
	.transition-all {
		transition-property: all;
		transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
		transition-duration: 300ms;
	}

	/* Card hover effects */
	.hover-card {
		transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
	}

	.hover-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
	}


</style>