---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
	<main>
		<!-- Hero Section -->
		<section class="bg-gradient-to-r from-slate-900 to-slate-800 text-white py-32">
			<div class="container mx-auto px-4">
				<div class="max-w-3xl">
					<h1 class="text-5xl font-serif font-bold mb-8 leading-tight">Expert Legal Solutions for Complex Challenges</h1>
					<p class="text-xl mb-12 text-gray-300 leading-relaxed">With over 25 years of experience, we provide exceptional legal services to individuals and businesses.</p>
					<a href="/contact" class="btn btn-primary bg-gold hover:bg-gold-dark">Schedule a Consultation</a>
				</div>
			</div>
		</section>

		<!-- Practice Areas -->
		<section class="py-24">
			<div class="container mx-auto px-4">
				<h2 class="text-4xl font-serif font-bold text-center mb-16">Our Practice Areas</h2>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-12">
					<div class="hover-card bg-white p-8 rounded-lg shadow-lg">
						<h3 class="text-2xl font-serif font-bold mb-4">Corporate Law</h3>
						<p class="text-gray-600 leading-relaxed">Comprehensive legal solutions for businesses of all sizes, from startups to corporations.</p>
					</div>
					<div class="hover-card bg-white p-8 rounded-lg shadow-lg">
						<h3 class="text-2xl font-serif font-bold mb-4">Civil Litigation</h3>
						<p class="text-gray-600 leading-relaxed">Expert representation in complex civil disputes and litigation matters.</p>
					</div>
					<div class="hover-card bg-white p-8 rounded-lg shadow-lg">
						<h3 class="text-2xl font-serif font-bold mb-4">Real Estate</h3>
						<p class="text-gray-600 leading-relaxed">Legal guidance for real estate transactions, development, and disputes.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Why Choose Us -->
		<section class="bg-gray-50 py-24">
			<div class="container mx-auto px-4">
				<h2 class="text-4xl font-serif font-bold text-center mb-16">Why Choose Nayaya Vedika</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
					<div class="text-center hover-card bg-white p-8 rounded-lg shadow-lg">
						<div class="text-5xl font-serif font-bold text-gold mb-4">25+</div>
						<p class="text-gray-600">Years of Experience</p>
					</div>
					<div class="text-center hover-card bg-white p-8 rounded-lg shadow-lg">
						<div class="text-5xl font-serif font-bold text-gold mb-4">1000+</div>
						<p class="text-gray-600">Cases Won</p>
					</div>
					<div class="text-center hover-card bg-white p-8 rounded-lg shadow-lg">
						<div class="text-5xl font-serif font-bold text-gold mb-4">50+</div>
						<p class="text-gray-600">Expert Attorneys</p>
					</div>
					<div class="text-center hover-card bg-white p-8 rounded-lg shadow-lg">
						<div class="text-5xl font-serif font-bold text-gold mb-4">98%</div>
						<p class="text-gray-600">Client Satisfaction</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Contact CTA -->
		<section class="py-24 bg-gradient-to-r from-slate-900 to-slate-800 text-white">
			<div class="container mx-auto px-4 text-center">
				<h2 class="text-4xl font-serif font-bold mb-8">Ready to Discuss Your Case?</h2>
				<p class="text-xl text-gray-300 mb-12 max-w-2xl mx-auto">Schedule a consultation with our experienced attorneys today.</p>
				<a href="/contact" class="btn btn-primary bg-gold hover:bg-gold-dark">Contact Us Now</a>
			</div>
		</section>
	</main>
</Layout>